{
  "manifest_version": 3,
  "name": "Selectable",
  "version": "1.2",
  "description": "Select and copy specific cell data from tables.",
  "permissions": ["activeTab", "scripting", "clipboardWrite"],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
